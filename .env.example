# Universal Simulation Webapp Environment Variables
# Copy this file to .env and fill in your actual API keys

# NASA API Key (Get from: https://api.nasa.gov/)
REACT_APP_NASA_API_KEY=your_nasa_api_key_here

# OpenAI API Key for AI Assistant (Get from: https://platform.openai.com/)
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here

# News API Key (Optional, for enhanced news features)
REACT_APP_NEWS_API_KEY=your_news_api_key_here

# Development Settings
NODE_ENV=development
REACT_APP_VERSION=1.0.0

# Performance Settings
REACT_APP_MAX_UNIVERSE_OBJECTS=10000
REACT_APP_RENDER_QUALITY=high
REACT_APP_ENABLE_ANALYTICS=false

# Feature Flags
REACT_APP_ENABLE_VOICE_INTERFACE=true
REACT_APP_ENABLE_KNOWLEDGE_GRAPH=true
REACT_APP_ENABLE_NEWS_FEED=true
REACT_APP_ENABLE_ADMIN_DASHBOARD=false

# API Endpoints (Optional overrides)
REACT_APP_NASA_BASE_URL=https://api.nasa.gov
REACT_APP_OPENAI_BASE_URL=https://api.openai.com

# Security Settings
REACT_APP_ENABLE_CORS=true
REACT_APP_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com